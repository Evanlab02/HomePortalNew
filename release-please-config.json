{
    "draft-pull-request": true,
    "packages": {
        "backend": {
            "release-type": "simple",
            "package-name": "home-portal-api"
        },
        "docs": {
            "release-type": "simple",
            "package-name": "home-portal-documentation"
        },
        "frontend": {
            "release-type": "node"
        },
        "packages/components": {
            "separate-pull-requests": true,
            "release-type": "node"
        },
        "site": {
            "release-type": "simple",
            "package-name": "home-portal-site"
        },
        ".": {
            "include-component-in-tag": false,
            "release-type": "simple",
            "exclude-paths": [
                "packages/components",
                "frontend",
                "backend",
                "docs"
            ]
        }
    },
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}